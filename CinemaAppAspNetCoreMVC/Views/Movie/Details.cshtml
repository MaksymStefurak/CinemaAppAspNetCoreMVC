@model CinemaAppAspNetCoreMVC.Domain.Models.Movie

@{
    ViewData["Title"] = "Деталі фільму";
}

<h2 class="mb-4">📋 Деталі фільму</h2>

<div class="p-4 border rounded shadow-sm bg-light">
    <p><strong>Назва:</strong> @Model.Title</p>
    <p><strong>Режисер:</strong> @Model.Director</p>
    <p><strong>Жанр:</strong> @Model.Genre</p>
    <p><strong>Опис:</strong> @Model.Description</p>
    <p><strong>Сеанси:</strong></p>
    <ul>
        @foreach (var session in Model.Sessions)
        {
            <li>@session.SessionTime.ToString("g")</li>
        }
    </ul>

    <a asp-action="Index" class="btn btn-secondary mt-3">↩ Назад до списку</a>
</div>
