@model CinemaAppAspNetCoreMVC.Domain.Models.Movie

@{
    ViewData["Title"] = "Видалення фільму";
}

<h1>Ви впевнені, що хочете видалити цей фільм?</h1>

<div class="mb-3">
    <strong>Назва:</strong> @Model.Title
</div>
<div class="mb-3">
    <strong>Режисер:</strong> @Model.Director
</div>
<div class="mb-3">
    <strong>Жанр:</strong> @Model.Genre
</div>
<div class="mb-3">
    <strong>Опис:</strong> @Model.Description
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Так, видалити</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>