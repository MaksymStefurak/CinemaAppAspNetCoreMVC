@model CinemaAppAspNetCoreMVC.ViewModels.MainPageViewModel

@{
    ViewData["Title"] = "Головна сторінка";
}

<h2 class="mb-4 text-center">🎬 Фільми, що зараз у кінотеатрі</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var movie in Model.Movies)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text text-muted mb-2">@movie.Description</p>
                    <p class="mb-1"><strong>🎭 Жанр:</strong> @movie.Genre</p>
                    <p class="mb-3"><strong>🎬 Режисер:</strong> @movie.Director</p>
                    <div class="mt-auto">
                        <a class="btn btn-outline-primary w-100"
                           asp-controller="Session"
                           asp-action="Book"
                           asp-route-movieId="@movie.Id">
                            🎟 Забронювати сеанс
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
