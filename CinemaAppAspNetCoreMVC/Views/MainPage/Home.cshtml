@model CinemaAppAspNetCoreMVC.ViewModels.MainPageViewModel

<h2>Фільми в кінотеатрі</h2>

<div class="row">
@foreach (var movie in Model.Movies)
{
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@movie.Title</h5>
                <p class="card-text">@movie.Description</p>
                <p><strong>Жанр:</strong> @movie.Genre</p>
                <p><strong>Режисер:</strong> @movie.Director</p>
                <a class="btn btn-primary" asp-controller="Session" asp-action="Book" asp-route-movieId="@movie.Id">Забронювати сеанс</a>
            </div>
        </div>
    </div>
}
</div>